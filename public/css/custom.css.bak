}

/* רשימת אייקונים בשורה אחת */
.social-icons-circular {
  list-style: none;
  padding: 0;
  margin: 0;
  display: flex;
  justify-content: center;
  gap: 12px;
  flex-wrap: wrap;
  direction: rtl;
}

/* קישורים - עיגול אפור ואייקון לבן */
.social-icons-circular li a {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 46px;
  height: 46px;
  border-radius: 50%;
  background-color: #e0e0e0; /* אפור בהיר */
  color: white;
  font-size: 20px;
  transition: background-color 0.3s ease, transform 0.2s ease;
}

/* כל האייקונים בצבע לבן */
