{{- /* אפס את המערך */ -}}
{{- $.Scratch.Add "index" slice -}}

{{- /* עבור כל דף רגיל באתר */ -}}
{{- range .Site.RegularPages }}
  {{- $.Scratch.Add "index" (dict
    "title" .Title
    "content" .Plain
    "permalink" .Permalink
    "url" .RelPermalink
    "type" .Type
    "summary" .Summary
  ) -}}
{{- end -}}

{{- /* הפוך את המערך ל־JSON והדפס */ -}}
{{- $.Scratch.Get "index" | jsonify -}}
